FROM node:22-alpine
WORKDIR /app

# Aktifkan pnpm dari corepack
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy hanya file lock dan package.json untuk cache efisien
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy seluruh source code
COPY . .

# Expose port preview (SvelteKit default: 5173, tapi kita set ke 3000)
EXPOSE 3000

# Jalankan dengan mode dev agar live reload aktif
CMD ["pnpm", "dev", "--host", "0.0.0.0", "--port", "3000"]
